<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_houseList_picture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/picture"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="5dp">
                <TextView
                    android:id="@+id/txt_houseList_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海洋都心景觀四房雙車免仲介費可入戶籍補助"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/orange"
                        app:cardCornerRadius="1dp">
                        <TextView
                            android:id="@+id/txt_houseList_tag1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="整層住家"
                            android:textSize="13dp"
                            android:textColor="@color/orange"
                            android:background="@color/white"
                            android:layout_margin="1dp"
                            android:paddingHorizontal="2dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/orange"
                        app:cardCornerRadius="1dp"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:id="@+id/txt_houseList_tag2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="整層住家"
                            android:textSize="13dp"
                            android:textColor="@color/orange"
                            android:background="@color/white"
                            android:layout_margin="1dp"
                            android:paddingHorizontal="2dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/orange"
                        app:cardCornerRadius="1dp"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:id="@+id/txt_houseList_tag3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="整層住家"
                            android:textSize="13dp"
                            android:textColor="@color/orange"
                            android:background="@color/white"
                            android:layout_margin="1dp"
                            android:paddingHorizontal="2dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_houseList_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="達欣海都 NO.3 淡水區新市三路二段"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:id="@+id/txt_houseList_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="32258元/月"
                    android:textSize="20dp"
                    android:textColor="@color/red"
                    android:layout_marginTop="5dp"
                    android:gravity="right"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>